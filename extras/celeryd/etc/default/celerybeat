# Where the Django project is.
CELERYBEAT_CHDIR="/opt/formhub/"

# Python interpreter from environment, if using virtualenv
ENV_PYTHON="/home/vernon/Envs/formhub/bin/python"

# Path to celerybeat
CELERYBEAT="$ENV_PYTHON $CELERYD_CHDIR/manage.py celerybeat"

# Extra arguments to celerybeat
CELERYBEAT_OPTS="--schedule=/var/run/celery/celerybeat-schedule"

CELERYBEAT_LOG_FILE="/var/log/celery/beat.log"
CELERYBEAT_PID_FILE="/var/run/celery/beat.pid"

# Workers should run as an unprivileged user.
CELERYBEAT_USER="www-data"
CELERYBEAT_GROUP="www-data"

# Name of the projects settings module.

export DJANGO_SETTINGS_MODULE="formhub.preset.production"
